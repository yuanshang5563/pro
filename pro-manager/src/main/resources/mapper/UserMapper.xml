<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="org.ys.manager.dao.UserMapper">  
  
  
    <resultMap type="org.ys.manager.model.User" id="userResultMap">  
        <id property="userId" column="user_id"/>  
        <result property="userName" column="user_name"/>  
        <result property="cardId" column="card_id"/>  
        <result property="email" column="email"/>  
        <result property="mobile" column="mobile"/>
        <result property="birthday" column="birthday"/>
        <result property="password" column="password"/>
    </resultMap>  
    
    <select id="getUser" parameterType="java.lang.String" resultType="org.ys.manager.model.User" resultMap="userResultMap">  
      	select * from t_user t where t.user_id = #{userId}  
    </select>  
      
    <select id="getUserAll"  resultType="org.ys.manager.model.User" resultMap="userResultMap">  
        select * from t_user 
    </select>  
      
    <insert id="insertUser" parameterType="org.ys.manager.model.User">
    	<selectKey resultType="java.lang.Long" keyProperty="userId" order="AFTER">
             select LAST_INSERT_ID()
        </selectKey>
        insert into t_user (user_id,user_name,card_id, email,mobile,birthday,password)   
        values (#{userId},#{userName},#{cardId},#{email},#{mobile},#{birthday},#{password})     
    </insert>
</mapper>